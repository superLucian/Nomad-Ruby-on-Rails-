.row
  .col-md-12.page-wrap
    .row
      .col-md-4.offset-md-4
        .card.form-card
          .card-header
            %h2.login-header Reset Password


          .card-block
            .row
              .col-md-12
                = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post })do |f|
                  - if alert || notice || devise_error_messages!
                    .row
                      .col-md-12
                        - if notice
                          .alert.alert-warning
                            = notice
                        - else
                          .alert.alert-danger
                            = alert
                            = devise_error_messages!
                  .row
                    .col-md-12
                      .form-group
                        = f.label :email
                        = f.email_field :email, autofocus: true, class: 'form-control'


                  .row
                    .col-md-12
                      = f.submit 'Reset Password', class: 'btn btn-success'


:javascript
   $(function(){
     if ($(".alert").text().trim() == '') {
      $(".alert").hide(); 
    } else {
      $(".alert").show(); 
    }
  })