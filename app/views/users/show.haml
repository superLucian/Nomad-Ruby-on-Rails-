.row.page-wrap
  .col-md-12
    .row
      .col-md-8.offset-md-2
        %h2.wecome-back
          ="Welcome back!"
              

        - if @likely_offers.length > 0

          .card.dashboard-card
            .card-header
              %h5
                See Your Likely Other Product Options Now
                %i.fa.fa-plus-circle.hidden
                %i.fa.fa-minus-circle             
            .card-block
              .row
                .col-md-12
                  %p 
                    Congratulations! Based upon the information that you submitted in your previous search, you have other likely product options.



              .row
                .col-md-12
                  .dashboard-button
                    = link_to 'See Other Product Options Now', likely_offers_path, style: 'margin-right:20px;margin-bottom:10px;', class: 'btn btn-success'

        .card.dashboard-card
          .card-header
            %h5
              Student Loan
              %i.fa.fa-plus-circle.hidden
              %i.fa.fa-minus-circle             
          .card-block
            .row
              .col-md-12
                %p 
                  Find funding for the education that you need.

            .row
              .col-md-12
                .dashboard-button
                  - application_1 = Application.where(user_id: current_user.id, application_type: 'student_loan').last
                  - if application_1.nil? || application_1.editable?
                    = link_to current_user.application_button('student_loan', current_user)[0], current_user.application_button('student_loan', current_user)[1], class: 'btn btn-success', style: 'margin-right:20px;margin-bottom:10px'
                    - if @likely_offers.find_by(application_type: 'student_loan')
                      = link_to 'View Recommended Partners', likely_offers_path, style: 'margin-right:20px;margin-bottom:10px;', class: 'btn btn-success'

                  - else
                    %p
                      %strong Search Status:
                      = application_1.status.humanize


        .card.dashboard-card
          .card-header
            %h5
              Student Loan Refinancing
              %i.fa.fa-plus-circle
              %i.fa.fa-minus-circle.hidden              
