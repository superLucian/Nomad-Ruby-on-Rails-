                    = button_to 'Notify Me When Available', create_interest_path(current_user) + "?interest=Mortgage", class: 'btn btn-success'

:javascript
  $(function(){
    $('.dashboard-card > .card-header').on('click', function(){
      $(this).parent().children('.card-block').toggleClass('hidden');
      $(this).parent().find('i').toggleClass('hidden');
    })
  })                     
